# Accepts n (int) from standard input and writes a countdown from n to 0 to standard output.

    readi    r0          # read n
    seti     r1 0        # zero = 0
label:
    jltn     r0 r1 halt  # if n < zero jump to 6
    writei   r0          # write n
    addi     r0 -1       # n = n - 1
    jumpn    label       # jump to 2
halt:
    halt                 # halt the machine
